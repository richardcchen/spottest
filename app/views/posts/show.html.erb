<style>
  @font-face {
  font-family: “Abadi MT Std Cond Bold”;
  src: url(“[https://assets.hearstapps.com/sites/countryliving/assets/fonts/4929ec17-f3cf-45d2-8dbf-b5b5c8e2f175.e6e9e21.woff](https://assets.hearstapps.com/sites/countryliving/assets/fonts/4929ec17-f3cf-45d2-8dbf-b5b5c8e2f175.e6e9e21.woff)“);
  font-style: normal;
  }  
</style>

<p id="notice"><%= notice %></p>
<div> Total Comments:
  <span class="spot-im-replies-count" data-post-id="<%= @post.id %>"></span>
</div>
<p>
  <strong>Name:</strong>
  <%= @post.name %>
</p>

<p>
  <strong>Title:</strong>
  <%= @post.title%>
</p>

<p>
  <strong>Content:</strong>
  <%= @post.content %>
</p>

<%= link_to 'Edit', edit_post_path(@post) %> |
<%= link_to 'Back', posts_path %>
<br/><br/><br/><br/>
<div>
  <%= Faker::Company.name %>
  <br/>
  <img src="<%= Faker::Company.logo %>" alt="Smiley face" height="42" width="42">
  <br/>
  <%= Faker::Company.bs %>
</div>


<script async src="https://recirculation.staging-spot.im/spot/sp_LBaUdxe3"></script>
<div data-spotim-module="recirculation" data-spot-id="sp_LBaUdxe3"></div>
<script async data-spotim-module="spotim-launcher"
  src="https://launcher.staging-spot.im/spot/sp_LBaUdxe3"
  data-post-id="<%=@post.id%>">
</script>

<script
  async src="https://launcher.spot.im/spot/sp_LBaUdxe3"
  data-conversation-skin="dark"
  data-social-reviews="true"
  data-spotim-module="spotim-launcher"
  data-post-url = "https://spottesting.herokuapp.com/posts/<%=@post.id%>"
  data-post-id="<%="#{@post.id}review"%>" >
</script>



