<%= meta_tag :'og:title', @post.title %>
<%= meta_tag :'og:description', @post.content %>
<%= meta_tag :'og:url', "https://spottesting.herokuapp.com/posts/#{@post.id}" %>
<%= meta_tag :'og:image', "https://upload.wikimedia.org/wikipedia/commons/3/3a/Spot.IM-Logo.jpg" %>


